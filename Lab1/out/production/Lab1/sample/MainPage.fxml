<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.MainPageController">
    <bottom>
        <AnchorPane prefHeight="400.0" prefWidth="701.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="start" layoutX="131.0" layoutY="321.0" mnemonicParsing="false" onAction="#Start" prefHeight="45.0" prefWidth="82.0" text="Start">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Button>
                <Button fx:id="stop" layoutX="18.0" layoutY="321.0" mnemonicParsing="false" onAction="#stop" prefHeight="45.0" prefWidth="82.0" text="Exit">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Button>
                <AnchorPane layoutX="-1.0" prefHeight="47.0" prefWidth="707.0" style="-fx-background-color: #98FB98;">
                    <children>
                        <Label layoutX="142.0" layoutY="2.0" prefHeight="44.0" prefWidth="423.0" text="Testing knowledge of the multiplication table" textFill="#7c7979">
                            <font>
                                <Font name="System Bold Italic" size="19.0" />
                            </font>
                        </Label>
                    </children>
                </AnchorPane>
                <Label layoutX="142.0" layoutY="178.0" prefHeight="45.0" prefWidth="36.0" text=" =">
                    <font>
                        <Font size="30.0" />
                    </font>
                </Label>
                <TextField fx:id="answer" layoutX="185.0" layoutY="181.0" onAction="#next" prefHeight="36.0" prefWidth="168.0" promptText="Enter your answer">
                    <font>
                        <Font name="System Italic" size="18.0" />
                    </font>
                </TextField>
                <Label layoutX="58.0" layoutY="178.0" text="x" fx:id="x">
                    <font>
                        <Font size="30.0" />
                    </font>
                </Label>
                <Label fx:id="y" layoutX="123.0" layoutY="178.0" text="y">
                    <font>
                        <Font size="30.0" />
                    </font>
                </Label>
                <Label layoutX="93.0" layoutY="178.0" text="*">
                    <font>
                        <Font size="30.0" />
                    </font>
                </Label>
                <Label fx:id="control" layoutX="481.0" layoutY="151.0" prefHeight="172.0" prefWidth="192.0" text="Mark" />
                <TextField fx:id="name" layoutX="254.0" layoutY="62.0" prefHeight="34.0" prefWidth="199.0" promptText="Enter your name">
                    <font>

                        <Font name="System Italic" size="11.0" />
                    </font>
                </TextField>
                <Button fx:id="errors" layoutX="482.0" layoutY="322.0" mnemonicParsing="false" onAction="#errors" text="Check mistakes">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Button>
                <Label fx:id="corranswer" layoutX="445.0" layoutY="139.0" prefHeight="39.0" prefWidth="170.0" text="Label" textFill="#f2f2f2">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </bottom>
</BorderPane>
